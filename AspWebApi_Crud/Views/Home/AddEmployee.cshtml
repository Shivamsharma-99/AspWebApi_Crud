@model AspWebApi_Crud.Models.ModelClass
@{
    ViewBag.Title = "Add Employee";
}
@using (Html.BeginForm("AddEmployee", "Home", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id);
    <h2>AddEmployee page</h2>

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @required = "required", @placeholder = "Enter Name.." })
    </div>


    <div class="form-group">
        <label>Age</label>
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @required = "required", @placeholder = "Enter Age.." })
    </div>    

    <div class="form-group">
        <label>Gender</label>
        @Html.TextBoxFor(m => m.Gender, new { @class = "form-control", @required = "required", @placeholder = "Enter Gender.." })
    </div>    

    <div class="form-group">
        <label>Salary</label>
        @Html.TextBoxFor(m => m.Salary, new { @class = "form-control", @required = "required", @placeholder = "Enter Salary.." })
    </div>    

    <div class="form-group">
        <label>Designation</label>
        @Html.TextBoxFor(m => m.Designation, new { @class = "form-control", @required = "required", @placeholder = "Enter Designation.." })
    </div>

    <button type="submit" class="btn btn-success">Add Customer</button>
}

